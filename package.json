{
  "name": "axaml-document-outline",
  "displayName": "AXAML Document Outline",
  "description": "Provides Document Outline functionality for Avalonia AXAML files with hierarchical tree view navigation",
  "version": "0.1.5",
  "publisher": "avalonia-tools",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "axaml-outline.activate",
        "title": "Activate AXAML Outline",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.status",
        "title": "Show Extension Status",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.forceReload",
        "title": "Force Reload Extension",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.test",
        "title": "Test Extension (Always Available)",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.navigateToElement",
        "title": "Navigate to AXAML Element",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.showElementInfo", 
        "title": "Show AXAML Element Information",
        "category": "AXAML"
      },
      {
        "command": "axaml-outline.toggleLineNumbers",
        "title": "Toggle Line Numbers in Outline",
        "category": "AXAML"
      }
    ],
    "languages": [
      {
        "id": "axaml",
        "aliases": ["AXAML", "axaml", "Avalonia XAML"],
        "extensions": [".axaml"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "axaml",
        "scopeName": "text.xml.axaml",
        "path": "./syntaxes/axaml.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "axaml-outline.navigateToElement",
        "key": "ctrl+shift+o",
        "when": "editorLangId == axaml"
      },
      {
        "command": "axaml-outline.showElementInfo",
        "key": "ctrl+shift+i",
        "when": "editorLangId == axaml"
      },
      {
        "command": "axaml-outline.toggleLineNumbers",
        "key": "ctrl+shift+l",
        "when": "editorLangId == axaml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-and-install": "npm run package && npx vsce package --allow-star-activation --allow-missing-repository && powershell -ExecutionPolicy Bypass -File install-extension.ps1",
    "quick-install": "npx vsce package --allow-star-activation --allow-missing-repository && powershell -ExecutionPolicy Bypass -File install-extension.ps1"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
